<div class="flex-wrapper s-m-hide  c-output-wrapper" style="background-color: black;">
    <div class="dv-grid  u-mb--large u-flex s-m-hide">
        <div class="dv-grid__item seven-tenths">
            <div class="dv-grid  u-flex">

                <div class="dv-grid__item  u-flex__item one-third">
                    <a class="o-media o-media--middle c-output">
                        <div class="o-media__img">
                            <img class="c-output__img cc_streaminfo" data-type="trackimageurl" data-username="jaygreentree">
                        </div>
                        <div class="o-media__body">
                            <span class="o-media__tag o-media__tag--np">Now Playing</span>
                            <strong class="cc_streaminfo c-output__title" data-type="tracktitle"
                                    data-username="jaygreentree"></strong>
                            <em class="cc_streaminfo c-output__time" data-type="trackartist"
                                data-username="jaygreentree"></em>
                        </div>
                    </a>
                </div>


                <div class="dv-grid__item  u-flex__item  one-fourth bg--primary">
                    {% set currentEventId = craft.app.request.segment(3) %}
                    {% for event in craft.calendar.events({id: 'not ' ~ currentEventId,rangeStart: 'today',rangeEnd: '1 month',limit: 1}) %}
                        <a class="o-media o-media--middle c-output">
                            <div class="o-media__img">
                                {% set image = event.image.one() %}
                                {% if image %}
                                    <img src="{{ image.getUrl('') }}" class="c-output__img" alt="{{ image.alt }}">
                                {% else %}
                                    <img src="/files/360_F_516275801_f3Fsp17x6HQK0xQgDQEELoTuERO4SsWV.jpg"
                                         class="c-output__img" alt="">
                                {% endif %}
                            </div>
                            <div class="o-media__body">
                                <span class="o-media__tag">On Air</span>
                                <strong class="c-output__title">{{ event.title }}</strong>
                                <small style="color:white;">
                                    {{ event.startDate.format("H:i A") }} - {{ event.endDate.format("H:i A") }}
                                </small>
                            </div>
                        </a>
                    {% endfor %}
                </div>

            </div>
        </div>
        <hr>
        <div class="dv-grid__item  u-flex__item three-tenths  js-l-listen-live">
            <a href="javascript:void();" onclick="return popitup('/en/player')" data-popup-size=""
