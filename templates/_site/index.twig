{% extends '_site/NewLayout' %}
{% css %}
.grid a:hover {
    text-decoration: none;
}
{% endcss %}
{% block content %}
    <!-- HEADER IMAGE -->
    {% for entry in craft.entries.section('homeSlider').limit('1') %}
    {% set image = entry.overviewImage.one() %}
    <div class="container-fluid bg-kllight p-5 hero" style="background:linear-gradient(to bottom, rgba(0,0,0,0), rgba(0,0,0,.5)), url('{% if image %}{{ image.getUrl() }}{% endif %}') center center;">
        <div class="row justify-content-center">
            <div class="col-11 col-md-12 text-center pt-4">
                <div class="d-block mb-4">
                    <!--img class="harvest-logo" src="img/harvest-2018-logo.png"-->
                </div>
                <div class="content">
                    <h3 class="text-center text-white display-3 font-weight-bold">{{ entry.title }}</h3>
                    <h4 class="subhead text-white mb-3">
                        {{ entry.intro | truncate(200)| raw }}
                    </h4>
                    <a href="{{ entry.url }}" class="btn btn-primary">Read More</a>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
<!-- Tiles -->


    <section id="Blog" class="relative scroll-mt-16">
    <div class="mx-auto max-w-7xl p-8 xl:py-16">
        <h2 class="mb-4 text-2xl font-extrabold md:text-3xl text-center">Latest News</h2>


        <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3">
            
            {% for entry in craft.entries.section('newsEntries').limit('6') %}
            <a href="{{ entry.url }}">
                <div class="group h-full w-full overflow-clip rounded-lg bg-white shadow-lg transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl lg:rounded-xl">
                    <div class="relative">
                        {% set image = entry.overviewImage.one() %}
                    {% if image %}
                        <img alt="{{ image.alt }}" loading="lazy" decoding="async" data-nimg="1" class="h-full w-full transition-all duration-300 group-hover:scale-105" style="color:transparent;width:405px; height:250px;" src="{{ image.getUrl() }}">
                        {% endif %}
                    </div>
                    <div class="relative z-10 rounded-b-md bg-white p-5">
                        <h5 class="mb-1 font-bold lg:mb-2 lg:text-xl">{{ entry.title }}</h5>
                        <h3 class="text-sm">By {{ entry.author.fullName }}</h3>
                        <h3 class="text-sm">On {{ entry.postDate | date('M, d Y') }}</h3>
                    </div>
                </div>
            </a>
            {% endfor %}

        </div>
        <div class="mt-8 flex justify-center"><a href="/news/" class="rounded-full px-5 py-3 text-sm transition-all duration-200 bg-brand-primary font-bold text-white transition-all duration-300 hover:bg-brand-primary-dark undefined">Show More</a>
        </div>
    </div>
</section>


    <!-- VOTD -->
    <div class="container-fluid py-5" style="background-color: #777;">
        <h1 class="text-center text-white">Verse of The Day</h1>
        <div class="container">
            <div class="row justify-content-center">
                {% for entry in craft.entries.section('verseOfTheDay').limit('1') %}
                <div class="col-11 col-md-5">
                    {% set image = entry.image.one() %}
                    {% if image %}
                    <img class="img-fluid rounded" src="{{ image.getUrl() }}">
                    {% endif %}
                </div>
                <div class="col-11 col-md-6">
                    <div class="v-align-middle">
                        <p class="font-weight-bold text-white border-bottom pb-3 text-uppercase"> {{ entry.postDate | date("M d, Y") }} </p>
                        <h3 class="font-weight-bold text-white">{{ entry.description }}</h3>
                        <p class="mt-4">
                            <span class="font-weight-bold text-white">{{ entry.title }}</span> - 
                            <a href="{{ entry.verseLink }}" class="text-white" target="_blank"> Read Full Chapter</a></p>
                        <p class="text-white">Provided By: <a href="http://nlt.to" target="_blank">New Living Translation</a></p>
                        <p class="text-white">
                            Share:<br>
                            {% include '_site/_snippet/_content/_socialShare' %}
                        </p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}