{% extends "_site/_layout" %}
{% block content %}

{% include '_site/_snippet/_content/_hero' %}
<div class="section section--default">
    <div class="container">
        <div class="w-full md:w-3/4">
            {{ entry.intro }}
            <!--p class="">If you want to know how to use the various JS components, you can
                    
                    take a look at the <a class="" href="/jsPlugins/overview">examples
                    {{ icon('chevron-right', { class: 'text-primary' }) }} 
                    </a>.
                </p-->
        </div>
    </div>
</div>

{% if entry.alert %}
<div class="row">
    <div class="container">
        <div role="alert">
  <div class="bg-red-500 text-white font-bold rounded-t px-4 py-2">
    {{entry.alertTitle}}
  </div>
  <div class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700">
    {{ entry.alertDescription }}
  </div>
</div>

    </div>
</div>
{% endif %}

{% set news = craft.entries().section('newsItems').with(['overviewImage']).orderBy('postDate DESC').limit(3).collect() %}
{% if news|length %}
<div class="section section--default">
    <div class="container">
        <h2 class="heading-2">{{ 'Latest News'|t }}</h2>
        <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 md:grid-cols-3">
            {% for cardEntry in news.all() %}
            {% include '_site/_snippet/_item/_card' with {amount: news.count()} %}
            {% endfor %}
        </div>
        {% set newsOverview = craft.entries.section('newsOverview').one() %}
        {% if newsOverview|length %}
        <div class="my-10 text-center">
            <a href="{{ newsOverview.url }}" class="btn btn--primary btn--ext">{{ "More News"|t }}</a>
        </div>
        {% endif %}
    </div>
</div>
{% endif %}
{% endblock %}